<odoo>
    <data noupdate="1">

        <!-- Cron pour les abonnements expirés -->
        <record id="ir_cron_expire_abonnements" model="ir.cron">
            <field name="name">Vérifier les abonnements expirés</field>
            <field name="model_id" ref="model_gym_abonnement"/>
            <field name="state">code</field>
            <field name="code">model._cron_expire_abonnements()</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

        <!-- Cron pour les rappels d’abonnement -->
        <record id="ir_cron_check_expiring_abonnements" model="ir.cron">
            <field name="name">Rappel abonnements expirant dans 3 jours</field>
            <field name="model_id" ref="model_gym_abonnement"/>
            <field name="state">code</field>
            <field name="code">model.check_expiring_abonnements()</field>
            <field name="interval_type">days</field>
            <field name="interval_number">1</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
        </record>

    </data>
</odoo>
